@{
    ViewData["Title"] = "QR Code Generator";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="GenerateQRCodeAndConvertToPDF">
    <div>
        <label for="jsonData">JSON Data:</label>
        <textarea name="jsonData" id="jsonData" rows="5"></textarea>
    </div>
    <div>
        <button type="submit">Generate QR Code and Download PDF</button>
    </div>
</form>